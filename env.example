# HyperLiquid Node Parser Environment Configuration

# Node logs path
NODE_LOGS_PATH=/app/node_logs

# Cleanup settings
CLEANUP_INTERVAL_HOURS=2

# File monitoring and retry settings
FILE_READ_RETRY_ATTEMPTS=3
FILE_READ_RETRY_DELAY=1.0

# Performance optimization settings for large files (30+ GB)
MAX_FILE_SIZE_GB=50.0
MAX_ORDERS_PER_FILE=1000000
CHUNK_SIZE_BYTES=8192
BATCH_SIZE=1000
PROCESSING_TIMEOUT_PER_GB=5

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Logging settings
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE_MB=100
LOG_RETENTION_DAYS=30

# Data settings
DATA_DIR=data
CONFIG_FILE_PATH=config/coins.json

# API limits
MAX_ORDERS_PER_REQUEST=1000

# Development settings
DEBUG=false
RELOAD=false

# Performance tuning examples for different scenarios:

# For very large files (50+ GB):
# MAX_FILE_SIZE_GB=100.0
# CHUNK_SIZE_BYTES=16384
# BATCH_SIZE=2000
# PROCESSING_TIMEOUT_PER_GB=3

# For memory-constrained environments:
